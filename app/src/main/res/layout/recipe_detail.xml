<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="recipeStep"
            type="udacity.android.com.bakingapp.object.Step" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_detail"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textIsSelectable="true"
            tools:context=".view.RecipeDetailFragment" />
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/exoplayer_recipe_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/exoplayer_height"
            android:visibility="@{recipeStep.hasVideo() ? View.VISIBLE : View.GONE, default=visible}"
            />

    </LinearLayout>
</layout>
